<Window x:Class="CttTest.SetupEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CttTest"
        mc:Ignorable="d"
        Title="Setup Editor"
        Height="450"
        Width="300"
        Icon="/icon.png"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <Label>Setup</Label>
            <ComboBox ItemsSource="{Binding Setups}"
                      SelectedIndex="{Binding SelectedSetupIndex, Mode=TwoWay}"/>
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Save" Click="Save_Click"/>
            <Button Content="Cancel" Click="Cancel_Click"/>
        </WrapPanel>
    </Grid>
</Window>
